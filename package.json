{
  "name": "tradebot-starter",
  "version": "0.1.0",
  "workspaces": [
    "apps/portal",
    "apps/mobile"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "node scripts/copyMevAssets.mjs",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "backtest": "ts-node src/backtest/backtest.ts",
    "test": "node -r ./test/polyfill-crypto.js ./node_modules/vitest/vitest.mjs",
    "walkforward": "ts-node scripts/walkforward.ts",
    "deploy:paper": "ts-node scripts/deployPaper.ts",
    "deploy:live": "ts-node scripts/deployLive.ts",
    "client-admin": "ts-node src/admin/clientCli.ts",
    "admin:server": "ts-node src/admin/server.ts",
    "paper:worker": "ts-node src/jobs/paperRunWorker.ts",
    "client:worker": "ts-node src/workers/clientRunner.ts",
    "arbitrage:worker": "ts-node src/jobs/arbitrageWorker.ts",
    "portal:dev": "npm run dev --workspace portal",
    "portal:build": "npm run build --workspace portal",
    "portal:start": "npm run start --workspace portal",
    "mobile:lint": "npm run lint --workspace @tradebot/mobile",
    "mobile:typecheck": "npm run typecheck --workspace @tradebot/mobile",
    "mobile:ci": "npm run mobile:lint && npm run mobile:typecheck",
    "admin:approvals": "ts-node src/admin/approvalCli.ts",
    "admin:audit-anchor": "ts-node src/admin/auditAnchorCli.ts",
    "postinstall": "patch-package",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "db:fix-client": "ts-node scripts/fixClientId.ts"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.893.0",
    "@aws-sdk/client-s3": "^3.893.0",
    "@aws-sdk/s3-request-presigner": "^3.893.0",
    "@opentelemetry/api": "^1.9.0",
    "axios": "^1.3.0",
    "bullmq": "^1.80.0",
    "ccxt": "^2.0.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.0.0",
    "gh": "^2.8.9",
    "ioredis": "^5.3.1",
    "libsodium-wrappers": "^0.7.15",
    "ms": "^2.1.3",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "stripe": "^12.18.0",
    "winston": "^3.8.2",
    "expo": "~51.0.28",
    "react": "18.2.0",
    "react-native": "0.74.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/ms": "^2.1.0",
    "@types/node": "^18.0.0",
    "@types/pg": "^8.15.5",
    "eslint": "^8.0.0",
    "hardhat": "^2.16.0",
    "patch-package": "^8.0.1",
    "pg-mem": "^3.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.1.6",
    "vitest": "^3.2.4"
  }
}
